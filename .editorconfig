# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
carset = utf-8
end_of_line = lf
insert_final_newline = true

[*.coffee]
indent_style = space
indent_size = 2

[src/js/**/*.js]
indent_style = tab
indent_size = 4

[*.styl]
indent_style = tab
indent_size = 4

[*.jade]
indent_style = tab
indent_size = 4


[package.json]
indent_style = space
indent_size = 2
